@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<ul class="navbar-nav">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Fiber" asp-action="AdminControlPlanDetails">Plans</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Offers" asp-action="AdminControlOfferDetails">Offers</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Employee" asp-action="EmployeeList">Employees</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Employee" asp-action="RegisterEmployee">Add Employees</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Customer" asp-action="CustomerList">Customers</a>
    </li>
    @{
        ViewBag.Data = HttpContextAccessor.HttpContext.Request.Cookies["AdminToken"];
    }
    @if (@ViewBag.Data != null)
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="AdminControl">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Fiber" asp-action="PlanDetails">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Customer" asp-action="CustomerLogin">UserLogin</a>
        </li>
    }
</ul>
