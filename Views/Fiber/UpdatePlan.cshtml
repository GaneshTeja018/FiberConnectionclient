@model FiberConnectionClient.Models.FiberPlan

@{
    ViewData["Title"] = "UpdatePlan";
    Layout = "_AdminLayout";
}
<style>
    .c1 {
        margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */
    }
</style>
<br />
<br />
<br />
<div class="card crd bg-dark mb-3 c1" style="max-width: 30rem;">
    <div class="card-body">
        <div class="login-box">
            <h2>Add Plan</h2>
            <form id="f1" asp-action="UpdatePlan">
                <div class="user-box">
                    <input asp-for="PlanId" required>
                    <label>Id</label>
                    <span asp-validation-for="PlanId" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="PlanName" required>
                    <label>Plan Name</label>
                    <span asp-validation-for="PlanName" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="PlanPrice" required>
                    <label>Plan Price</label>
                    <span asp-validation-for="PlanPrice" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="PlanSpeed" required>
                    <label>Speed</label>
                    <span asp-validation-for="PlanSpeed" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="Validity" required>
                    <label>Validity</label>
                    <span asp-validation-for="Validity" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="OfferId" required>
                    <label>OfferId</label>
                    <span asp-validation-for="OfferId" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="Image" required>
                    <label>Image</label>
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <a href="#" onclick="document.getElementById('f1').submit();">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    Add Plan
                </a>
                <a asp-action="AdminControl" asp-controller="Admin">
                    Back
                </a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
