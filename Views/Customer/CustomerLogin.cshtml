@model FiberConnectionClient.Models.Customer

@{
    ViewData["Title"] = "CustomerLogin";
}

<style>
    .c1 {
        margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */
    }
</style>
<br />
<br />
<br />
<div class="card crd bg-dark c1" style="max-width: 30rem;">
    <div class="card-body">
        <div class="login-box">
            <h2><span><img src="~/images/user1.png" width="40" height="40" class="d-inline-block align-top" alt=""> </span>Customer Login</h2>
            <form id="f1" asp-action="CustomerLogin">
                <div class="user-box">
                    <input asp-for="CustomerMailId" required>
                    <label><span><img src="~/images/user1.png" width="25" height="25" class="d-inline-block align-top" alt=""> </span>User Mail</label>
                    <span asp-validation-for="CustomerMailId" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="CustomerPassword" required>
                    <label><span><img src="~/images/password.png" width="25" height="25" class="d-inline-block align-top" alt=""> </span>Password</label>
                    <span asp-validation-for="CustomerPassword" class="text-danger"></span>
                </div>
                <a href="#" onclick="document.getElementById('f1').submit();">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    <img src="~/images/login.png" width="25" height="25" class="d-inline-block align-top" alt=""> Login 
                </a>
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <span>
                    <a asp-action="RegisterCustomer" asp-controller="Customer">
                        <span></span>
                        <span></span>
                        <span></span>
                        <span></span>
                        <img src="~/images/sign-up.png" width="25" height="25" class="d-inline-block align-top" alt=""> Signup
                    </a>
                </span>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
