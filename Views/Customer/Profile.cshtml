@model FiberConnectionClient.Models.Customer

@{
    ViewData["Title"] = "Profile";
}
<style>
    .c1 {
        margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */
    }
    .text-n {
        color: #8a6ea7;
    }
</style>
<br />
<br />
<br />
<div class="card border-light crd bg-dark mb-3 c1" style="max-width: 30rem;">
    <div class="card-body">
        <div class="login-box">
            <h2>Profile</h2>
            <dl class="row" style="color: #03e9f4;">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.CustomerName)
                </dt>
                <dd class="col-sm-10 text-n">
                    @Html.DisplayFor(model => model.CustomerName)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </dt>
                <dd class="col-sm-10 text-n">
                    @Html.DisplayFor(model => model.DateOfBirth)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.CustomerAddress)
                </dt>
                <dd class="col-sm-10 text-n">
                    @Html.DisplayFor(model => model.CustomerAddress)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.CustomerPhoneNumber)
                </dt>
                <dd class="col-sm-10 text-n">
                    @Html.DisplayFor(model => model.CustomerPhoneNumber)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.CustomerAadharNo)
                </dt>
                <dd class="col-sm-10 text-n">
                    @Html.DisplayFor(model => model.CustomerAadharNo)
                </dd>
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.CustomerMailId)
                </dt>
                <dd class="col-sm-10 text-n">
                    @Html.DisplayFor(model => model.CustomerMailId)
                </dd>
            </dl>
        </div>
        <div class="flash">
            @Html.ActionLink("Edit Profile", "ProfileEdit") 
        </div>
    </div>
</div>