@model FiberConnectionClient.Models.Customer

@{
    ViewData["Title"] = "SignUp";
}
<style>
    .c1 {
        margin: 0 auto; /* Added */
        float: none; /* Added */
        margin-bottom: 10px; /* Added */
    }
</style>
<br />
<br />
<br />
<div class="card border-light bg-dark mb-3 c1" style="max-width: 30rem;">
    <div class="card-body">
        <div class="login-box">
            <h2><span><img src="~/images/sign-up.png" width="40" height="40" class="d-inline-block align-top" alt=""> </span>Sign Up</h2>
            <form id="f1" asp-action="RegisterCustomer">
                <div class="user-box">
                    <input asp-for="CustomerName" required>
                    <label><span><img src="~/images/user1.png" width="25" height="25" class="d-inline-block align-top" alt=""> </span>Name</label>
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="DateOfBirth" required autofocus> 
                    <label><span><img src="~/images/dob.png" width="25" height="25" class="d-inline-block align-top" alt=""> </span>Date of Birth</label>
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="CustomerAadharNo" required>
                    <label><span><img src="~/images/aadhar.png" width="25" height="25" class="d-inline-block align-top" alt=""> </span>Aadhar Number</label>
                    <span asp-validation-for="CustomerAadharNo" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="CustomerAddress" required>
                    <label><span><img src="~/images/address.png" width="25" height="25" class="d-inline-block align-top" alt=""> </span>Address</label>
                    <span asp-validation-for="CustomerAddress" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="CustomerPhoneNumber" required>
                    <label><span><img src="~/images/phone.png" width="25" height="25" class="d-inline-block align-top" alt=""> </span>Phone Number</label>
                    <span asp-validation-for="CustomerPhoneNumber" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="CustomerMailId" required>
                    <label><span><img src="~/images/mail.png" width="25" height="25" class="d-inline-block align-top" alt=""> </span>Mail Id</label>
                    <span asp-validation-for="CustomerMailId" class="text-danger"></span>
                </div>
                <div class="user-box">
                    <input asp-for="CustomerPassword" required>
                    <label><span><img src="~/images/password.png" width="25" height="25" class="d-inline-block align-top" alt=""> </span>Password</label>
                    <span asp-validation-for="CustomerPassword" class="text-danger"></span>
                </div>
                <a href="#" onclick="document.getElementById('f1').submit();">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    <img src="~/images/sign-up.png" width="25" height="25" class="d-inline-block align-top" alt=""> Sign Up
                </a>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
